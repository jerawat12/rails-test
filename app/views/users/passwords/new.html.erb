<div class="h-screen flex justify-center items-center">
  <div class="w-1/3 p-16 rounded-lg bg-white shadow-lg">

    <div class="flex justify-center -mt-24 mb-2">
      <%= link_to root_path do %>
        <img src="https://bulma.io/images/placeholders/96x96.png" class="is-rounded">
      <% end %>
    </div>

    <h2 class="text-gray-700 font-bold text-lg text-center">Forgot your password?</h2>
    
    <div class="my-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <%= render "layouts/scripts/form_errors", obj: resource %>

        <div class="mb-4">
          <label>Email</label>
          <%= f.email_field :email, placeholder: "bruce@wayne-enterprises.com", autofocus: true, class: "input" %>
        </div>

        <%= f.submit "Send me reset password instructions", class: "btn" %>
      <% end %>
    </div>

  <%= render "users/shared/links" %>

  </div>
</div>